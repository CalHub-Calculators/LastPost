<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/header') %>
    <style>
        .stats-card { background: #fff; border-radius: 15px; padding: 20px; border: 1px solid #eee; }
    </style>
</head>
<body class="bg-light">
    <%- include('../partials/admin-nav') %>

    <div class="container my-5">
        <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center mb-4 gap-3">
            <div>
                <h2 class="fw-800 mb-1">Contact messages</h2>
                <p class="text-muted mb-0">Messages submitted from your contact page.</p>
            </div>
            <form class="d-flex gap-2" method="get" action="/developer/contacts">
                <input
                    type="text"
                    name="q"
                    class="form-control form-control-sm bg-white border"
                    placeholder="Search by name, email, or message..."
                    value="<%= search || '' %>"
                >
                <button class="btn btn-sm btn-outline-dark fw-bold" type="submit">Search</button>
            </form>
        </div>

        <div class="row g-3 mb-4">
            <div class="col-md-3">
                <div class="stats-card shadow-sm">
                    <div class="text-muted small mb-1">Total messages</div>
                    <div class="h4 mb-0"><%= stats.total || 0 %></div>
                </div>
            </div>
        </div>

        <div class="card border-0 shadow-sm" style="border-radius: 15px;">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-white">
                        <tr>
                            <th class="ps-4 py-3 text-muted small">NAME</th>
                            <th class="py-3 text-muted small">EMAIL</th>
                            <th class="py-3 text-muted small">MESSAGE</th>
                            <th class="py-3 text-muted small">DATE</th>
                            <th class="py-3 text-end pe-4 text-muted small">ACTIONS</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% contacts.forEach(c => { %>
                            <tr>
                                <td class="ps-4"><%= c.name %></td>
                                <td><%= c.email %></td>
                                <td style="max-width: 350px;">
                                    <span class="small text-muted">
                                        <%= c.message.length > 120 ? c.message.slice(0, 120) + 'â€¦' : c.message %>
                                    </span>
                                </td>
                                <td class="text-muted small">
                                    <%= new Date(c.created_at).toLocaleString() %>
                                </td>
                                <td class="text-end pe-4">
                                    <form method="post" action="/developer/contacts/delete/<%= c.id %>" onsubmit="return confirm('Delete this message?');">
                                        <button class="btn btn-sm btn-outline-danger">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        <% }) %>
                        <% if (contacts.length === 0) { %>
                            <tr>
                                <td colspan="5" class="text-center py-4 text-muted">No messages yet.</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
</html>