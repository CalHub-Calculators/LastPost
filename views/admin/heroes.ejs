<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/header') %>
</head>
<body class="bg-light">
  <%- include('../partials/admin-nav') %>

  <div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <div>
        <h2 class="fw-800 mb-1">Hero slides</h2>
        <p class="text-muted mb-0">Manage the images and buttons shown in the homepage hero.</p>
      </div>
      <a href="/developer/heroes/edit" class="btn btn-dark">+ New slide</a>
    </div>

    <div class="card border-0 shadow-sm" style="border-radius: 15px;">
      <div class="table-responsive">
        <table class="table align-middle mb-0">
          <thead>
            <tr>
              <th class="ps-4 text-muted small">PREVIEW</th>
              <th class="text-muted small">TEXT</th>
              <th class="text-muted small">BUTTON</th>
              <th class="text-muted small">ORDER</th>
              <th class="text-muted small">STATUS</th>
              <th class="text-end pe-4 text-muted small">ACTIONS</th>
            </tr>
          </thead>
          <tbody>
            <% slides.forEach(s => { %>
              <tr>
                <td class="ps-4">
                  <img src="<%= s.image_url %>" alt="" style="width: 120px; height: 60px; object-fit: cover; border-radius: 8px;">
                </td>
                <td>
                  <div class="fw-semibold"><%= s.title %></div>
                  <div class="small text-muted"><%= s.subtitle %></div>
                </td>
                <td class="small">
                  <% if (s.button_text && s.button_link) { %>
                    <span class="badge bg-light text-dark"><%= s.button_text %></span>
                  <% } else { %>
                    <span class="text-muted">â€”</span>
                  <% } %>
                </td>
                <td class="small"><%= s.sort_order %></td>
                <td>
                  <% if (s.is_active) { %>
                    <span class="badge bg-success-subtle text-success">Active</span>
                  <% } else { %>
                    <span class="badge bg-secondary-subtle text-secondary">Hidden</span>
                  <% } %>
                </td>
                <td class="text-end pe-4">
                  <a href="/developer/heroes/edit/<%= s.id %>" class="btn btn-sm btn-outline-primary me-1">Edit</a>
                  <form action="/developer/heroes/delete/<%= s.id %>" method="POST" class="d-inline" onsubmit="return confirm('Delete this slide?');">
                    <button class="btn btn-sm btn-outline-danger">Delete</button>
                  </form>
                </td>
              </tr>
            <% }) %>
            <% if (slides.length === 0) { %>
              <tr>
                <td colspan="6" class="text-center py-4 text-muted">No slides yet. Create your first hero slide.</td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
   <%- include('../partials/footer') %>
</body>
</html>